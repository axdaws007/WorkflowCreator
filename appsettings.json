{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.SemanticKernel": "Information"
    }
  },
  "AllowedHosts": "*",

  "AI": {
    "Cloud": {
      "Provider": "OpenAI",
      "Temperature": 0.7,
      "MaxTokens": 2000,

      "OpenAI": {
        "ApiKey": "sk-your-openai-api-key-here",
        "ModelId": "gpt-4o-mini",
        "OrganizationId": ""
      },

      "Azure": {
        "Endpoint": "https://your-resource.openai.azure.com/",
        "ApiKey": "your-azure-api-key",
        "ModelId": "gpt-4"
      }
    },

    "Local": {
      "Provider": "Ollama",
      "Endpoint": "http://localhost:11434",
      "ModelId": "codellama:7b",
      "AnalysisModel": "llama3:8b",
      "FunctionModel": "llama3:8b",
      "Temperature": 0.1,
      "MaxTokens": 3000
    }
  },

  "WorkflowSchema": {
    "SchemaFile": "workflow-schema.sql",
    "UseSchemaFile": true
  }
}